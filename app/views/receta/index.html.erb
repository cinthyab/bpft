		  	<div class="imagenindex">
		  		<%= link_to (image_tag (recetum.foto.url(:small))), recetum %>
		  	</div>

		  	<div class="nombre">
		  			<%= link_to recetum.titulo, recetum %>
		  	</div></br>

		  	<div class= "indexdescripcion">	
		  		<%= recetum.descripcion %>
		  	
			  	<div class = "iconsindex">
			  		<%= link_to (image_tag ("/system/receta/fotos/lapiz.svg")), edit_recetum_path(recetum) %>
			  	</div>

			  	<div class = "iconsindex">
			  		<%= link_to (image_tag ("/system/receta/fotos/delt.svg")), recetum, method: :delete, data: { confirm: 'Â¿Desea eliminar esta receta?' } %>
			  	</div>
		  	</div>
		</div>

	  	
    <% end %>

	<div class = "iconsindex">
	<%= link_to 'Nueva Receta', new_recetum_path %>
