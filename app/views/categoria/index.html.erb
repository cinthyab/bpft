<div class="box">
  <h1>Categorías</h1>

  <table align= "center">
    <tr>
      <th>Nombre</th>
      <th></th>
      <th></th>
     </tr>

    <% @categoria.each do |categorium| %>
      <tr>
        <td><%= link_to categorium.nombre, categorium %></td>
        <td><%= link_to (image_tag ("/system/receta/fotos/lapiz.svg")), edit_categorium_path(categorium) %></td>
        <td><%= link_to (image_tag ("/system/receta/fotos/delt.svg")), categorium, method: :delete, data: { confirm: '¿Desea eliminar esta categoría?'} %></td>
      </tr>
    <% end %>
  </table>

  <br />
  <div align= "center">
  <%= link_to 'Nueva categoría', new_categorium_path %>
</div>